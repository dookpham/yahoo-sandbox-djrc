  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="position_types")
        | position_types
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="roster_positions")
        | roster_positions
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="teams")
        | teams
    .col-sm-6.desc
      p
        | note: "teams" subresource only available in the games collection for specific users


