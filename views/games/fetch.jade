extends games

block code
  | &nbsp;
  | yf.games.fetch(
  |   [game_keys] OR {filters},
  |   [subresources], // optional

block inputs
  div(role="tabpanel", role="tablist")
    ul.nav.nav-tabs(role="tablist")
      li.active(role="presentation")
        a(href="#standard", role="tab", data-toggle="tab") Standard Usage
      li(role="presentation")
        a(href="#filters", role="tab", data-toggle="tab") Filters (Alternate Usage)
  .tab-content
    #standard.tab-pane.active(role="tabpanel")
      .row.form-group
        .col-sm-2
          label game_key
        .col-sm-4
          input#game_key.form-control(type="text", placeholder="eg. 328")
        .col-sm-6.desc
          p
          | Game key examples: 'mlb', 'nfl', 328 (2014 MLB season), 242 (2010 NFL season). For the purposes of this demo, you can enter a comma separated list of player keys for the array.
    #filters.tab-pane(role="tabpanel")
      .row
        .col-sm-2
          label is_available
        .col-sm-4
          input#is_available.filter.form-control(type="text", placeholder="eg. 1")
        .col-sm-6.desc
          p
            | 1 to only show games currently in season
      .row
        .col-sm-2
          label game_types
        .col-sm-4
          input#game_types.filter.form-control(type="text", placeholder="eg. full")
        .col-sm-6.desc
          p
            | full, pickem-team, pickem-group, pickem-team-list
      .row
        .col-sm-2
          label game_codes
        .col-sm-4
          input#game_codes.filter.form-control(type="text", placeholder="eg. nfl, mlb")
        .col-sm-6.desc
          p
            | Any valid game codes. Not necessarily useful when entering game keys.
      .row
        .col-sm-2
          label seasons
        .col-sm-4
          input#seasons.filter.form-control(type="text", placeholder="eg. 2011, 2012")
        .col-sm-6.desc
          p
            | Any valid seasons
  h4 Subresources (optional)
  .row
    .col-sm-2
      label subresources
    .col-sm-4.checkbox-group
      label
        input(type="checkbox", name="game_weeks")
        | game_weeks
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="stat_categories")
        | stat_categories
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="position_types")
        | position_types
  .row
    .col-sm-4.col-sm-offset-2.checkbox-group
      label
        input(type="checkbox", name="roster_positions")
        | roster_positions

block sample
  pre
    code.json
      !{JSON.stringify({game_key:'328',game_id:'328',name:'Baseball',code:'mlb',type:'full',url:'http://baseball.fantasysports.yahoo.com/b1',season:'2014'}, null, 2)};
